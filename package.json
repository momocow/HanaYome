{
    "name": "hanayome",
    "productName": "hanayome",
    "version": "2.0.0",
    "description": "A dedicated browser for the web game, Flower Knight Girl.",
    "main": "./index.js",
    "engines": {
        "node": ">=8.5.0"
    },
    "scripts": {
        "start": "electron .",
        "test": "echo \"Error: no test specified\" && exit 1",
        "build": "gulp build:app",
        "release": "gulp build:app && npx electron-builder build"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/momocow/HanaYome.git"
    },
    "keywords": [
        "flower knight girl",
        "dmm",
        "olg",
        "browser"
    ],
    "author": "MomoCow",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/momocow/HanaYome/issues"
    },
    "homepage": "https://github.com/momocow/HanaYome#readme",
    "dependencies": {
        "bluebird": "^3.5.1",
        "bytes-extra": "^2.0.1",
        "cson": "^4.1.0",
        "dateformat": "^2.0.0",
        "electron-updater": "^2.13.0",
        "electron-window-state": "^4.1.1",
        "font-awesome": "^4.7.0",
        "fs-extra": "^4.0.1",
        "lodash": "^4.17.4",
        "log4js": "^2.3.3",
        "marked": "^0.3.6",
        "node-dir": "^0.1.17",
        "node-notifier": "^5.1.2",
        "os-locale": "^2.1.0",
        "request": "^2.83.0",
        "semver": "^5.4.1",
        "traverse": "^0.6.6",
        "uuid": "^3.1.0"
    },
    "devDependencies": {
        "@types/bluebird": "^3.5.14",
        "@types/chai": "^4.0.4",
        "@types/compare-version": "^0.1.31",
        "@types/cson": "0.0.30",
        "@types/dateformat": "^1.0.1",
        "@types/electron-window-state": "^2.0.30",
        "@types/fs-extra": "^4.0.2",
        "@types/keytar": "^4.0.1",
        "@types/lodash": "^4.14.74",
        "@types/marked": "^0.3.0",
        "@types/mocha": "^2.2.43",
        "@types/node": "^8.0.28",
        "@types/node-dir": "0.0.32",
        "@types/node-notifier": "0.0.28",
        "@types/os-locale": "^2.1.0",
        "@types/request": "^2.0.6",
        "@types/semver": "^5.4.0",
        "@types/traverse": "^0.6.29",
        "@types/uuid": "^3.4.2",
        "chai": "^4.1.2",
        "electron": "1.7.9",
        "electron-builder": "^19.27.7",
        "electron-compilers": "^5.9.0",
        "electron-packager": "^9.0.1",
        "gulp": "^3.9.1",
        "gulp-babel-minify": "^0.2.0",
        "gulp-clean-css": "^3.9.0",
        "gulp-htmlmin": "^3.0.0",
        "gulp-sourcemaps": "^2.6.1",
        "gulp-task-listing": "^1.0.1",
        "gulp-typescript": "^3.2.2",
        "gulp-yarn": "^1.0.1",
        "gulp-zip": "^4.0.0",
        "isnumeric": "^0.3.2",
        "mocha": "^3.5.3",
        "nyc": "^11.2.1",
        "range": "0.0.3",
        "typescript": "^2.5.2"
    },
    "nyc": {
        "include": [
            "src/util/**"
        ],
        "extension": [
            ".ts"
        ]
    },
    "build": {
        "appId": "me.momocow.hanayome",
        "productName": "hanayome",
        "directories": {
            "buildResources": "assets/",
            "app": "app"
        },
        "extraResources": [
            "assets/**/*",
            "!assets/unused",
            "!assets/config",
            "!assets/PepperFlash",
            "assets/PepperFlash/${os}-${arch}"
        ],
        "electronDownload": {
            "cache": "./build/Release",
            "mirror": "https://npm.taobao.org/mirrors/electron/"
        },
        "win": {
            "icon": "assets/icon/app-icon.ico"
        },
        "nsis": {
            "artifactName": "${productName}-v${version}-setup.${ext}",
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "installerIcon": "assets/icon/app-icon.ico",
            "uninstallerIcon": "assets/icon/app-icon.ico",
            "installerSidebar": "assets/icon/sidebar.bmp",
            "uninstallerSidebar": "assets/icon/sidebar.bmp",
            "menuCategory": "HanaYome",
            "displayLanguageSelector": true
        },
        "linux": {
            "icon": "assets/icon/linux",
            "synopsis": "A dedicated browser for Flower Knight Girl",
            "category": "Game"
        }
    }
}
